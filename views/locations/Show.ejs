<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">The Bachelors</p>
            <div class="list-group">
                <li class="list-group-item active">info1</li>
                <li class="list-group-item">       info2</li>
                <li class="list-group-item">       info3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=location.image %>">
                <div class="caption-full">
                    <h4 class="pull-right"><%= location.price%>/month</h4>
                    <h4><a href="/locations/<%= location._id %>"><%= location.name %></a></h4>
                    <p><%= location.description %></p>
                    <p>
                        <em>Submitted By <%= location.author.username %></em>
                    </p>
                    <% if(currentUser && location.author.id.equals(currentUser._id)){ %>
                        <a href="/locations/<%=location._id%>/edit" class="btn btn-warning btn-xs">Edit</a>
                        <form class="delete-form" action="/locations/<%=location._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger btn-xs pull-right">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                        <a href="/locations/<%=location._id %>/comments/new" class="btn btn-success">Add new Comment</a>
                </div>
                <hr>
                <% location.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="pull-right">10 days ago</span>
                         <p>
                            <%= comment.text %>
                        </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" 
                        href="/locations/<%= location._id%>/comments/<%= comment._id%>/edit">
                            Edit
                        </a>
                        <form class="delete-form" action="/locations/<%= location._id%>/comments/<%= comment._id%>?_method=DELETE" method="POST">
                            <input type="submit" value="Delete" class="btn btn-xs btn-danger pull-right">
                        </form>
                        <% } %>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>        
<% include ../partials/footer %>