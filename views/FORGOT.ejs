<% include ./partials/header %>
<section id="aa-signin">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="aa-signin-area">
            <div class="aa-signin-form">
              <div class="aa-signin-form-title">
                <h2>Reset Password</h2>
              </div>
              
              <form class="contactform" action="/forgot" method="POST">                                                 
                <div class="aa-single-field">
                  <label for="email">Email <span class="required">*</span></label>
                  <input id="email" type="email" required="required" aria-required="true" name="email" autofocus>
                </div>
                <div class="aa-single-submit">
                  <input type="submit" value="Reset Password" class="aa-browse-btn" name="submit">  
                  <p>Don't Have A Account Yet? <a href="/REGISTER">CREATE NOW!</a></p>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% include ./partials/footer %>