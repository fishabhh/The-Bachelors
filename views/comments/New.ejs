<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Add new Comment to <%= location.name%></h1>
        <div style="width:30%; margin: 25px auto">
            <form action="/locations/<%= location._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Text" name="comment[text]" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>            
            </form>
            <a href="/locations">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
